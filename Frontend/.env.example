# ========================================
# Frontend Environment Configuration
# ========================================
# Copy this file to .env and update values as needed

# Frontend Port
FRONTEND_PORT=6410

# API Gateway Port (optional, if using proxy.conf)
API_GATEWAY_PORT=6400

# ========================================
# Backend Service URLs
# ========================================
# เหล่านี้คือ URLs ที่ Browser จะเรียกใช้
# ใช้ localhost สำหรับ development
# ใช้ domain/IP จริงสำหรับ production

# Auth Service
VITE_AUTH_SERVICE_URL=http://localhost:6401

# Image Ingestion Service
VITE_IMAGE_SERVICE_URL=http://localhost:6402

# Vision Inference Service
VITE_VISION_SERVICE_URL=http://localhost:6403

# Result API Service
VITE_RESULTS_SERVICE_URL=http://localhost:6404

# Labware Interface Service
VITE_LABWARE_SERVICE_URL=http://localhost:6405

# Prediction DB Service
VITE_PREDICTION_SERVICE_URL=http://localhost:6406

# Vision Capture Service (Device)
VITE_VISION_CAPTURE_SERVICE_URL=http://localhost:6407

# MinIO Storage (for direct access)
VITE_MINIO_BASE_URL=http://localhost:9000

# API Base URL (for unified API gateway, if used)
VITE_API_BASE_URL=http://localhost:6410

# ========================================
# Path Prefixes (for Kubernetes/Ingress)
# ========================================
# ใช้เมื่อ deploy บน Kubernetes พร้อม Ingress
# สำหรับ Docker Compose ให้เว้นว่างไว้

VITE_AUTH_PATH_PREFIX=
VITE_IMAGE_PATH_PREFIX=
VITE_VISION_PATH_PREFIX=
VITE_RESULTS_PATH_PREFIX=
VITE_LABWARE_PATH_PREFIX=
VITE_PREDICTION_PATH_PREFIX=
VITE_CAPTURE_PATH_PREFIX=

