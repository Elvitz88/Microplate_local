# Kubernetes/Cloud Environment Configuration
# Copy this file to .env when deploying to Kubernetes/Cloud

# API service URLs
# Use empty string or relative path for same-origin requests (recommended)
# Frontend will use window.location.origin automatically if empty
VITE_AUTH_SERVICE_URL=
VITE_IMAGE_SERVICE_URL=
VITE_VISION_SERVICE_URL=
VITE_RESULTS_SERVICE_URL=
VITE_LABWARE_SERVICE_URL=
VITE_PREDICTION_SERVICE_URL=

# Capture service (use same-origin)
VITE_VISION_CAPTURE_SERVICE_URL=
VITE_WS_CAPTURE_URL=wss://dev-labexam.betagro.com/ws/capture

# Ingress path prefixes (required for Kubernetes)
# These match the ingress paths defined in ingress-dev.yaml
VITE_AUTH_PATH_PREFIX=/auth
VITE_IMAGE_PATH_PREFIX=/ingestion
VITE_VISION_PATH_PREFIX=/vision
VITE_RESULTS_PATH_PREFIX=/result
VITE_LABWARE_PATH_PREFIX=/interface
VITE_PREDICTION_PATH_PREFIX=/prediction
VITE_CAPTURE_PATH_PREFIX=/capture

# Shared resources
VITE_MINIO_BASE_URL=https://dev-labexam.betagro.com/minio
VITE_API_BASE_URL=

# Docker / frontend port
FRONTEND_PORT=80

